generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Role {
  id          String     @id @default(uuid())
  name        String     @unique
  level       Int        @default(10) // 1 = Highest (Super Admin), 10 = Lowest (Staff)
  permissions String[]   // e.g., ["all", "employees", "attendance", "products", "pos", "sales", "analytics"]
  employees   Employee[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

model Employee {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  roleId        String
  role          Role           @relation(fields: [roleId], references: [id])
  salary        Decimal        @default(0)
  joinTimestamp DateTime?
  refreshToken  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  attendance    Attendance[]
  leaveRequests LeaveRequest[]
  sales         Sale[]
  commissions   Commission[]
}

model Attendance {
  id               String   @id @default(uuid())
  employeeId       String
  employee         Employee @relation(fields: [employeeId], references: [id])
  clockInTimestamp  DateTime @default(now())
  clockOutTimestamp DateTime?
  latitude         Float?
  longitude        Float?
  ipAddress        String?
}

model LeaveRequest {
  id             String      @id @default(uuid())
  employeeId     String
  employee       Employee    @relation(fields: [employeeId], references: [id])
  startTimestamp DateTime
  endTimestamp   DateTime
  type           String
  status         LeaveStatus @default(PENDING)
  reason         String?
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String     @id @default(uuid())
  sku         String     @unique
  name        String
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])
  price       Decimal
  stockLevel  Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  saleItems   SaleItem[]
}

model Sale {
  id          String       @id @default(uuid())
  employeeId  String
  employee    Employee     @relation(fields: [employeeId], references: [id])
  totalAmount Decimal
  timestamp   DateTime     @default(now())
  items       SaleItem[]
  commissions Commission[]
}

model SaleItem {
  id          String  @id @default(uuid())
  saleId      String
  sale        Sale    @relation(fields: [saleId], references: [id])
  productId   String
  product     Product @relation(fields: [productId], references: [id])
  quantity    Int
  priceAtSale Decimal
}


model Commission {
  id         String   @id @default(uuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  saleId     String
  sale       Sale     @relation(fields: [saleId], references: [id])
  amount     Decimal
  createdAt  DateTime @default(now())
}

model LeaveType {
  id          String   @id @default(uuid())
  name        String   @unique
  daysAllowed Int
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CompanySettings {
  id            String   @id @default(uuid())
  companyName   String   @default("My Company")
  workDays      String[] @default(["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"])
  workStartTime String   @default("09:00")
  workEndTime   String   @default("17:00")
  enableOvertime Boolean @default(false)
  country       String   @default("US")
  timezone      String   @default("America/New_York")
  currency      String   @default("USD")
  updatedAt     DateTime @updatedAt
}
